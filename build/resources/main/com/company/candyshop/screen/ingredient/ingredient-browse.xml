<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://ingredientBrowse.caption"
        focusComponent="ingredientsTable">
    <data readOnly="true">
        <collection id="ingredientsDc"
                    class="com.company.candyshop.entity.Ingredient">
            <fetchPlan extends="_base">
                <property name="flowSheet" fetchPlan="_base">
                    <property name="candyShop" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="ingredientsDl">
                <query>
                    <![CDATA[select e from Ingredient e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ingredientsTable" spacing="true">
        <filter id="filter"
                dataLoader="ingredientsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ingredientsTable"
                    width="100%"
                    dataContainer="ingredientsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="ingredientName"/>
                <column id="amount"/>
                <column id="dimension"/>
                <column id="flowSheet"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ingredientsTable.create"/>
                <button id="editBtn" action="ingredientsTable.edit"/>
                <button id="removeBtn" action="ingredientsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

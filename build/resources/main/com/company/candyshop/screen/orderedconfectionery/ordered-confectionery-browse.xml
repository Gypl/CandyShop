<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://orderedConfectioneryBrowse.caption"
        focusComponent="orderedConfectioneriesTable">
    <data readOnly="true">
        <collection id="orderedConfectioneriesDc"
                    class="com.company.candyshop.entity.OrderedConfectionery">
            <fetchPlan extends="_base">
                <property name="order" fetchPlan="_base">
                    <property name="candyShop" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="orderedConfectioneriesDl">
                <query>
                    <![CDATA[select e from OrderedConfectionery e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="orderedConfectioneriesTable" spacing="true">
        <filter id="filter"
                dataLoader="orderedConfectioneriesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="orderedConfectioneriesTable"
                    width="100%"
                    dataContainer="orderedConfectioneriesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="confectioneryName"/>
                <column id="number"/>
                <column id="order"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="orderedConfectioneriesTable.create"/>
                <button id="editBtn" action="orderedConfectioneriesTable.edit"/>
                <button id="removeBtn" action="orderedConfectioneriesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
